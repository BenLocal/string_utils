{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                // "-fcolor-diagnostics",
                // "-fansi-escape-codes",
                // "-finput-charset=UTF-8",
                // "-fexec-charset=UTF-8",
                // "-std=c99",
                // "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "LANG": "zh_CN.UTF-8",
                    "LC_ALL": "zh_CN.UTF-8"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}